{
  "name": "thunder-react",
  "description": "A thunder GraphQL client for React.",
  "version": "0.2.0",
  "main": "./lib/",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "rollup -c rollup.config.js && tsc -p ./tsconfig.json --emitDeclarationOnly",
    "prepublish": "npm run build",
    "test": "jest"
  },
  "dependencies": {
    "@types/lodash.isequal": "^4.5.2",
    "@types/react": "^16.3.17",
    "lodash.isequal": "4.4.0"
  },
  "peerDependencies": {
    "react": ">= 15.0.0 || >= 16.0.0",
    "react-dom": "^15.0.0 || >= 16.0.0"
  },
  "devDependencies": {
    "@types/jest": "^23.1.1",
    "@types/node": "^10.3.4",
    "@types/react-dom": "^16.0.6",
    "babel-cli": "^6.26.0",
    "babel-env": "^2.4.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "jest": "^23.1.0",
    "prettier": "^1.13.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "rollup": "^0.60.1",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-typescript2": "^0.14.0",
    "ts-jest": "^22.4.6",
    "typescript": "2.9"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/tests/.+(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
